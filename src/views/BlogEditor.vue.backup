<script>
import { ref, computed, onMounted } from 'vue';
import { useRoute, useRouter } from 'vue-router';
import { blogApi } from '../api/index';
import MarkdownIt from 'markdown-it';

const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true
});

export default {
  name: 'BlogEditor',
  setup() {
    const route = useRoute();
    const router = useRouter();
    const loading = ref(false);
    const submitting = ref(false);
    const isEdit = computed(() => !!route.params.id);
    const contentTextarea = ref(null);
    const fileInput = ref(null);
    
    // å›¾ç‰‡å¯¹è¯æ¡†ç›¸å…³
    const showImageDialog = ref(false);
    const imageMode = ref('url');
    const imageUrl = ref('');
    const imageAlt = ref('');
    const uploadProgress = ref(0);
    
    const form = ref({
      title: '',
      content: '',
      author: 'ä½°ä¸–é“œ',
      coverImage: '',
      tags: []
    });

    const tagsInput = ref('');

    const renderedContent = computed(() => {
      return md.render(form.value.content);
    });

    const fetchBlog = async () => {
      if (!isEdit.value) return;
      
      loading.value = true;
      try {
        const response = await blogApi.getById(route.params.id);
        if (response.success) {
          form.value = {
            title: response.data.title,
            content: response.data.content,
            author: response.data.author,
            coverImage: response.data.coverImage || '',
            tags: response.data.tags || []
          };
          tagsInput.value = form.value.tags.join(', ');
        }
      } catch (err) {
        alert('åŠ è½½åšå®¢å¤±è´¥ï¼š' + err.message);
        router.push('/admin');
      } finally {
        loading.value = false;
      }
    };

    const handleSubmit = async () => {
      // å¤„ç†æ ‡ç­¾
      form.value.tags = tagsInput.value
        .split(',')
        .map(tag => tag.trim())
        .filter(tag => tag.length > 0);

      submitting.value = true;
      try {
        if (isEdit.value) {
          await blogApi.update(route.params.id, form.value);
          alert('âœ… åšå®¢æ›´æ–°æˆåŠŸï¼');
        } else {
          await blogApi.create(form.value);
          alert('âœ… åšå®¢å‘å¸ƒæˆåŠŸï¼');
        }
        router.push('/admin');
      } catch (err) {
        alert('âŒ æ“ä½œå¤±è´¥ï¼š' + err.message);
        console.error(err);
      } finally {
        submitting.value = false;
      }
    };

    onMounted(() => {
      fetchBlog();
    });

    return {
      form,
      tagsInput,
      loading,
      submitting,
      isEdit,
      renderedContent,
      handleSubmit
    };
  }
};
</script>

